<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">


    <View
        android:id="@+id/viewDialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSukses"
        android:layout_width="215dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="@id/viewDialog"
        app:layout_constraintEnd_toEndOf="@id/viewDialog"
        app:layout_constraintStart_toStartOf="@id/viewDialog"
        app:layout_constraintTop_toTopOf="@id/viewDialog"
        app:layout_constraintVertical_bias="0.263"
        app:srcCompat="@drawable/success_checked" />

    <TextView
        android:id="@+id/tvPesananBerhasil"
        style="@style/text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Yeay! Pesanan Berhasil"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSukses" />

    <Button
        android:id="@+id/btnKembali"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorAccent"
        android:text="KEMBALI KE HOME"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/viewDialog"
        app:layout_constraintEnd_toEndOf="@id/viewDialog"
        app:layout_constraintStart_toStartOf="@id/viewDialog"
        app:layout_constraintTop_toBottomOf="@id/tvPesananBerhasil"
        app:layout_constraintVertical_bias="0.062" />

</androidx.constraintlayout.widget.ConstraintLayout>