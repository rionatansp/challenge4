<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/labelRingkasanBelanja"
        style="@style/text_header"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Belanja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <View
        android:id="@+id/viewRingkasan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/labelRingkasanBelanja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/labelTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga"
        app:layout_constraintStart_toStartOf="@id/viewRingkasan"
        app:layout_constraintTop_toTopOf="@id/viewRingkasan"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/labelMetodePembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran"
        app:layout_constraintStart_toStartOf="@id/labelTotalHarga"
        app:layout_constraintTop_toBottomOf="@id/labelTotalHarga" />

    <TextView
        android:id="@+id/labelMetodePengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pengiriman"
        app:layout_constraintStart_toStartOf="@id/labelMetodePembayaran"
        app:layout_constraintTop_toBottomOf="@id/labelMetodePembayaran" />

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":  Rp. 10.000"
        app:layout_constraintTop_toTopOf="@id/labelTotalHarga"
        app:layout_constraintBottom_toBottomOf="@id/labelTotalHarga"
        app:layout_constraintStart_toStartOf="@id/tvMetodePembayaran"/>

    <TextView
        android:id="@+id/tvMetodePembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":  TUNAI"
        app:layout_constraintTop_toTopOf="@id/labelMetodePembayaran"
        app:layout_constraintBottom_toBottomOf="@id/labelMetodePembayaran"
        app:layout_constraintStart_toEndOf="@id/labelMetodePembayaran"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/tvMetodePengiriman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":  AMBIL SENDIRI"
        app:layout_constraintTop_toTopOf="@id/labelMetodePengiriman"
        app:layout_constraintBottom_toBottomOf="@id/labelMetodePengiriman"
        app:layout_constraintStart_toEndOf="@id/labelMetodePembayaran"
        android:layout_marginStart="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>